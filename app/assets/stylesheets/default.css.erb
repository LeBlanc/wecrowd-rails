html, body {
    width: auto !important;
    overflow-x: hidden !important;
    height: 100%;
}

body {
    padding-top: 40px;
}

body {
    color: #3a4b54;
    font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-weight: 400;
}

.inline-block {
    display: inline-block;
}

.no-padding-left {
    padding-left: 0;
}

.left {
    float: left;
}

.right {
    float: right;
}

#spacer {
    height: 20px;
}

#wrap {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    margin: 0 auto -60px;
}


/* Navigation */
.navbar {
    min-height: 35px;
}

.navbar-brand {
    height: 35px;
    padding: 0;
    margin-top: -1px;
}

.navbar > .container .navbar-brand,
.navbar >.container-fluid .navbar-brand {
    margin-left: 0;
}

.navbar-inverse {
    background-color: transparent;
    border-color: transparent;
}

.navbar-static-top {
    top: 0;
}

.navbar-nav {
    float: right;
}

.nav > li {
    border: 1px solid #ef5e27;
    margin-left: 15px;
}

.navbar-inverse .navbar-nav > li > a {
    color: #ef5e27;
    letter-spacing: 1px;
    text-transform: uppercase;
}

.navbar-inverse .navbar-nav > li > a:hover {
    background-color: #feefe9;
    color: #ef5e27;
}

.navbar-nav > li > a {
    padding: 5px 15px 5px 15px;
}


/* Menu Navigation - Mobile */
.navbar-toggle {
    margin-top: 2px;
    border-radius: 0;
}

.navbar-inverse .navbar-toggle {
    border-color: #aab5bc;
}

.navbar-inverse .navbar-toggle .icon-bar {
    background-color: #aab5bc;
}

.navbar-toggle .icon-bar {
    height: 1px;
}

.navbar-inverse .navbar-collapse {
    border-color: transparent;
}


/* Logo */
.logo {
    height: 35px;
    width: auto;
    vertical-align: middle;
}


/* Header */
.header-container {
    margin-top: 40px;
    margin-bottom: 45px;
    width: 100%;
}

.header-container-content {
    background: url("<%= asset_path 'title-header-pattern.png' %>") repeat;
    background-color: #7ac9ea;
    background-size: 550px auto;
    text-align: center;
}

.jumbotron h1, .jumbotron .h1 {
    color: #ffffff;
    font-size: 45px;
    font-weight: 300;
    line-height: 60px;
}

.jumbotron p {
    color: #ffffff;
    font-size: 16px;
    font-weight: 400;
}

.jumbotron > hr {
    border: 2px solid #ffffff;
    margin-top: 40px;
    margin-bottom: 40px;
    width: 80px;
}


/* Main Content */
.main-content-feature {
    margin-bottom: 45px;
}


/* Campaign Cards */
.thumbnail {
    border-radius: 0;
    height: 400px;
    margin-bottom: 0;
    padding: 0;
    text-align: left;
}

.thumbnail .caption {
    padding: 0 10px 10px 10px;
}

.thumbnail h3 {
    font-size: 18px;
}

.thumbnail h3 a {
    color: #ef5e27;
}

.thumbnail h3 a:hover {
    text-decoration: none;
}

.thumbnail p {
    color: #aab5bc;
    font-size: 14px;
    margin: 0 0 10px;
}

.absolute-bottom {
    position: absolute;
    bottom: 0;
    margin-left: auto;
    margin-right: auto;
    width: 89%;
}

.thumbnail-footer {
    padding: 0 10px 10px 10px;
}

.thumbnail-footer h1 {
    color: #aab5bc;
    font-size: 40px;
    font-weight: 300;
}

.thumbnail-footer h5 {
    color: #aab5bc;
    font-size: 16px;
    font-weight: 400;
    margin-left: 7px;
}

.thumbnail-footer p {
    color: #aab5bc;
    font-size: 12px;
    font-weight: 400;
    margin: 0;
}

.thumbnail-footer #percent {
    font-weight: 700;
}

/* Progress bar */
.campaign-progress-bar {
    height: 6px;
    margin: 3px 0 7px 0;
    overflow: hidden;
}

.bg-gray {
    background-color: #f5f6f7;
}

.bg-orange {
    background-color: #ef5e27;
}

.full-height {
    height: 100%;
}


/* Footer */
#push, #footer {
    height: 60px;
}

.footer-container {
    background-color: #f5f6f7;
    width: 100%;
    height: auto;
    padding: 45px 0 45px 0;
}

.footer-container p {
    color: #aab5bc;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
}

.footer-links a {
    color: #3a4b54;
    letter-spacing: 1px;
    line-height: 28px;
    text-transform: uppercase;
}

.footer-links a:hover {
    color: #aab5bc;
    text-decoration: none;
}