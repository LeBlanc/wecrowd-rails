<h1><%= @campaign.name %></h1>

<p><%= @campaign.description %></p>

<%= form_tag("/campaign/donate/#{@campaign.id}", :class => 'donate-form span3') do %>
  <input type="hidden" name="client_id" value="<%= WEPAY_CONFIG['client_id'] %>" />
  <input type="hidden" name="credit_card_id" value="" />
  
  <div class="form-group">
  <label for="email">The amount you want to donate:</label>
  <%= text_field_tag(:amount, params[:amount], :class => 'text form-control', :placeholder => '500', :maxlength => 255) %>
  </div>

  <legend>Credit Card Details</legend>
  <div class="form-group">
  <label for="name">Your first and last name<b>*</b></label>
  <%= text_field_tag(:user_name, params[:user_name], :class => 'text form-control', :placeholder => 'First & Last Name', :maxlength => 255) %>
  </div>

  <div class="form-group">
  <label for="email">Your email address<b>*</b></label>
  <%= text_field_tag(:user_email, params[:user_email], :class => 'text form-control', :placeholder => 'jane.doe@gmail.com', :maxlength => 255) %>
  </div>
  
  <div class="form-group">
  <label for="email">Your credit card number<b>*</b></label>
  <%= text_field_tag(:cc_number, params[:cc_number], :class => 'text form-control', :placeholder => '5496198584584769', :maxlength => 255) %>
  </div>
  
  <div class="form-group">
  <label for="email">Your credit card CVV<b>*</b></label>
  <%= text_field_tag(:cvv, params[:cvv], :class => 'text form-control', :placeholder => '456', :maxlength => 255) %>
  </div>
  
  <div class="form-group">
  <label for="email">Expiration Month<b>*</b></label>
  <%= select_tag(:expiration_month, options_for_select(['01','02','03','04','05','06','07','08','09','10','11','12'], params[:expiration_month]), :class => 'text form-control') %>
  </div>
  
  <div class="form-group">
  <label for="email">Expiration Year<b>*</b></label>
  <%= select_tag(:expiration_year, options_for_select(['2014','2015','2016','2017','2018','2019','2020','2021','2022', '2023', '2024', '2025','2026'], params[:expiration_year]), :class => 'text form-control') %>
  </div>
  
  <div class="form-group">
  <label for="email">Your billing zip code<b>*</b></label>
  <%= text_field_tag(:zip, params[:zip], :class => 'text form-control', :placeholder => '94025', :maxlength => 255) %>
  </div>
  
  <div class="form-group">
    <button id="donation-button" type="submit" class="btn btn-success">Donate!</button>
  </div>
<% end %>

<script type="text/javascript" src="https://static.wepay.com/min/js/tokenization.v2.js"></script>
