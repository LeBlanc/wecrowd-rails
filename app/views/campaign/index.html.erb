  </div>

  <div class="col-lg-3 col-md-offset-1 main-content-feature">
  	<table class="table table-bordered campaign-public">
	  	<tbody>
		  	<tr>
			  	<td class="sidebar">
		  			<h1 class="inline-block">
		  				$<%= @campaign.amount_donated %>
	  				</h1>
		  			<h5 class="inline-block">
		  				<%= @campaign.amount_donated.currency %>
		  			</h5>

						<div class="sidebar-progress-bar bg-gray">
							<div class="bg-blue full-height" style="width: <%= @percent_complete %>%"></div>
						</div>
						<p>
							<%= @percent_complete %>% of $<%= @campaign.goal %> goal met
						</p>

						<p>
							<a href="/campaign/donate/<%= @campaign.id %>" class="btn btn-donate-orange">Donate</a>
						</p>
